<style type="text/css">
.msbox {
    padding: 15px;
    margin-bottom: 10px;
    min-width: 320px;
    border-radius: 15px;
}
.timeX {
    margin-right: 10px;
    font-weight: bold;
    font-size: 15px;
    float: left;
}
.bgrd{
    border-bottom: 1px solid rgb(214, 214, 214);
    padding-top: 15px;
}

.nameX{
    float: none;
    color: #000000;

}
.imgLoft{
  width: 400px;
  border-radius: 10px;
}
.dialogx{
    margin: 2px;
    margin-left: 0px;
    margin-right: 0px;
    background-color: #DCE7F3;
    padding-top: 10px;
    padding-bottom: 10px;

}
.user-name{
      margin-left: 60px;

}
.user-text{
      margin-left: 60px;
      text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
</style>
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <h2 class="sub-header">Сообщения</h2>


  <div class="table-responsive">
  {{#if bodyLog}}<div class="bg-success msbox">{{{bodyLog}}}</div>{{/if}}
  {{#if dialogs}}
    {{#each items}}
      <div class="col-md-12 pull-left dialogx">
        <img class="pull-left" src="{{message.photo}}">
        <div class="user-name">{{message.nameF}}</div>
        <div class="user-text">{{message.body}}</div>

      </div>
    {{/each}}

  {{/if}}
    {{#each messages}}
      {{#if user_out}}
        <div class="col-md-12 pull-right bgrd">
          <div class="bg-success  pull-right msbox">
            <p class="timeX">{{time}}</p>{{body}}
            {{#if attachments}}
              {{#each attachments}}
                {{#if photo}}<br>
                  <img class="imgLoft" src="{{photo.photo_604}}"/>
                {{/if}}
              {{/each}}
            {{/if}}
          </div>
        </div>
      {{else}}
        <div class="col-md-12 pull-left bgrd">
          <div class="bg-primary pull-left msbox">
            <p class="timeX">{{time}}</p><p class="timeX nameX">{{name}}</p>{{body}}
            {{#if attachments}}
              {{#each attachments}}
                {{#if photo}}<br>
                  <img class="imgLoft" src="{{photo.photo_604}}"/>
                {{/if}}
              {{/each}}
            {{/if}}
          </div>
        </div>
      {{/if}}
    {{/each}}
    </div>
</div>

<script type="text/javascript">
$( document ).ready(function() {
});  
</script>